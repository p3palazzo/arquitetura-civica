<style>
.page__hero--overlay {
  background-image:
    {%- if header.overlay_filter -%}
    linear-gradient(rgba(255, 255, 255, {{ header.overlay_filter }}),
                    rgba(255, 255, 255, {{ header.overlay_filter }})),
    {%- endif -%}
    url('{{ header.overlay_image }}');
  @media(prefers-color-scheme: dark) {
    background-image:
      {%- if header.overlay_filter -%}
      linear-gradient(rgba(0, 0, 0, {{ header.overlay_filter }}),
                      rgba(0, 0, 0, {{ header.overlay_filter }})),
      {%- endif -%}
      url('{{ header.overlay_image }}');
  }
}
</style>

<div class="position-relative mb-5">
  <div id="hero" class="page__hero{% if header.overlay_color or header.overlay_image %}--overlay{% endif %}{% if page.url == "/" %} hero-home{% endif %}">
    <div class="container py-5 flex-column">
      <h1 class="display-1">
        {% if title %}{{ title | safe }}{% else %}{{ site.title }}{% endif %}
        {% if subtitle -%}
        <span class="subtitle hero__subtitle d-block">
          {{ subtitle | safe }}
        </span>
        {%- endif %}
      </h1>
      {% if description %}{% set excerpt = description %}{% endif %}
      {% if excerpt %}<div class="lead">
        {{ excerpt | safe }}
      </div>{% endif %}
      {% if header.cta_url %}
        <p><a href="{{ header.cta_url }}" class="btn btn--light-outline btn--large">{{ header.cta_label }}</a></p>
      {% endif %}
      {% if header.actions %}
        <p class="action">
        {% for action in header.actions %}
        <a href="{{ action.href }}"{% if action.btn_class %} class="{{ action.btn_class }}"{% endif %}>
          {{ action.label | safe }}
        </a>
        {% endfor %}
        {% endif %}
    </div>
  </div>
  {% if header.caption -%}
  <figcaption class="hero__caption">
    {{ header.caption | safe }}
  </figcaption>
  {%- endif %}
</div>
